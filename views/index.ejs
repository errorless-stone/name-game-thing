<%- include('partials/html-head') %>


  <body class="container-fluid">


    <div class="row">
      <div class="col-md-6">
        <h1>Update Profile</h1>

        <%= console.log(profileData) %>

          <% for (var i=0; i< profileData.length; i++ ) { %>
            <form method="POST">
              <input type="hidden" id="devId" name="devId" value="<%= profileData[i]._id %>"></input>
              <input type="text" id="devName" name="devName" value="<%= profileData[i].devName %>"></input>
              <p>
                <%= profileData[i].devName %>'s GitHub = <%= profileData[i].devGitHub %>
              </p>

              <button class="btn btn-primary" type="submit" formaction="/updateProfile">Edit Name</button>
              <button class="btn btn-warning" type="submit" formaction="/deleteProfile">Delete Name </button>

            </form>
            <br />
            <% } %>
      </div>


      <div class="col-md-6">

        <h2> Create new Account</h2>

        <form action="/insertProfile" method="POST">

          <input type="text" id="newDevName" name="newDevName" placeholder="Enter in name"></input>

          <button class="btn btn-primary" type="submit">Add</button>

        </form>

      </div>
    </div>


  </body>

  </html>